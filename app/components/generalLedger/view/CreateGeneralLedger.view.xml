<mvc:View controllerName="projectGL.controller.CreateGeneralLedger" 
xmlns="sap.m" 
xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:t="sap.ui.table" xmlns:form="sap.ui.layout.form" 
xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" height="100%">
<uxap:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" upperCaseAnchorBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <Title text="NEW G/L계정 마스터 데이터" />
                </uxap:heading>
                <uxap:snappedTitleOnMobile>
                    <Title text="여기는 뭔가 싶어서 찾아보는곳" />
                </uxap:snappedTitleOnMobile>
                <uxap:actions>
                <Button type="Emphasized"
                    text="생성" press=".onCreate"/>
                <Button type="Default"
                    text="취소"
                    press=".onBack"/>
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="my section">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="헤더" mode="Expanded" id="Section1" titleUppercase="false">
                        <uxap:blocks>
                            <uxap:ObjectPageLazyLoader stashed="true" id="Section1stashed">
                                <VBox class="sapUiSmallMargin">
                                    <form:SimpleForm
                                        minWidth="1024"
                                        maxContainerCols="1"
                                        editable="false"
                                        layout="ResponsiveGridLayout"
                                        title="헤더"
                                        labelSpanL="1"
                                        labelSpanM="1"
                                        emptySpanL="8"
                                        emptySpanM="8"
                                        columnsL="1"
                                        columnsM="1"
                                        width="auto"
                                        class="sapUxAPObjectPageSubSectionAlignContent"
                                    >
                                        <form:content>
                                            <core:Title text="GL 계정 정보" />
                                            <Label text="GL 계정" />
                                            <Input id="GL_CODE" />
                                            
                                        </form:content>
                                    </form:SimpleForm>
                                </VBox>
                            </uxap:ObjectPageLazyLoader>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>


            <uxap:ObjectPageSection titleUppercase="false" title="my section">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="일반" mode="Expanded" id="Section2" titleUppercase="false">
                        <uxap:blocks>
                            <uxap:ObjectPageLazyLoader stashed="true" id="Section2stashed">
                                <VBox class="sapUiSmallMargin">
                                    <form:SimpleForm
                                        minWidth="1024"
                                        maxContainerCols="2"
                                        editable="false"
                                        layout="ResponsiveGridLayout"
                                        title="기본 정보"
                                        labelSpanL="3"
                                        labelSpanM="3"
                                        emptySpanL="4"
                                        emptySpanM="4"
                                        columnsL="3"
                                        columnsM="1"
                                        width="auto"
                                        class="sapUxAPObjectPageSubSectionAlignContent"
                                    >
                                        <form:content>
                                            <core:Title text="내역" />
                                                                                        

                                            <Label text="계정과목표" />
                                            <Input id="GL_COA" />

                                            <Label text="G/L 계정 유형" />
                                            <Input id="GL_ACCOUNTTYPE" />

                                            <Label text="계정 그룹" />
                                            <Input id="GL_ACCOUNTGROUP" />

                                            <Label text="손익 계산서 계정 유형" />
                                            <Input id="GL_PL_ACCOUNTTYPE" />

                                            <core:Title text="내역(유지보수 언어)(EN)" />
                                            <Label text="내역" />
                                            <Input id="GL_NAME" />

                                            <Label text="G/L 계정 설명" />
                                            <Input id="GL_DESCRIPTION" />

                                            <core:Title text="연결데이터" />
                                            <Label text="관계사 번호" />
                                            <Input id="GL_TRADINGPARTNER" />
                                        </form:content>
                                    </form:SimpleForm>
                                </VBox>
                            </uxap:ObjectPageLazyLoader>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection titleUppercase="false" title="my section">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="회사 코드 데이터" mode="Expanded" id="Section3" titleUppercase="false">
                        <uxap:blocks>
                            <uxap:ObjectPageLazyLoader stashed="true" id="Section3stashed">
                                <VBox class="sapUiSmallMargin">
                                    <form:SimpleForm minWidth="1024" editable="false" layout="ResponsiveGridLayout" title="회사 코드 지정" width="auto" class="sapUxAPObjectPageSubSectionAlignContent">
                                        <form:content>
                                            <t:Table width="100%" id="table" rows="{/ProductCollection}" selectionMode="MultiToggle" rowActionCount="1" visibleRowCount="7" ariaLabelledBy="title">                                                

                                                <t:columns>
                                                    <t:Column>
                                                        <Label text="회사 코드" />
                                                        <t:template>
                                                            <Input id="cc_company_code" />
                                                        </t:template>
                                                    </t:Column>
                                                    <t:Column>
                                                        <Label text="회사 이름" />
                                                        <t:template>
                                                            <Input id="cc_company_name" />
                                                        </t:template>
                                                    </t:Column>
                                                    <t:Column>
                                                        <Label text="계정 통화" />
                                                        <t:template>
                                                            <Input id="cc_currency" />
                                                        </t:template>
                                                    </t:Column>
                                                    <t:Column>
                                                        <Label text="계정과목표" />
                                                        <t:template>
                                                            <Input id="cc_coa" />
                                                        </t:template>
                                                    </t:Column>
                                                </t:columns>
                                            </t:Table>
                                        </form:content>

                                        <form:content />
                                    </form:SimpleForm>
                                </VBox>
                            </uxap:ObjectPageLazyLoader>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>