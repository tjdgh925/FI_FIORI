<mvc:View controllerName="projectGL.controller.GeneralLedger"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns:t="sap.ui.table">
    <f:DynamicPage id="RequestPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Title text="Standard*" />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox>
                            <Label text="" />
                            <SearchField id="search"
                                search=".onSearch2" />

                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="계정 과목표"
                                labelFor="multiInput" />
                            <MultiInput id="coaMulti"
                                valueHelpRequest="onValueHelpRequested"
                                required="true">
                                <suggestionColumns>
                                    <Column>
                                        <Label text="COA Code" />
                                    </Column>
                                    <Column>
                                        <Label text="COA Name" />
                                    </Column>
                                </suggestionColumns>
                                <suggestionRows>
                                    <ColumnListItem>
                                        <Label text="{COA_CODE}" />
                                        <Label text="{COA_NAME}" />
                                    </ColumnListItem>
                                </suggestionRows>
                            </MultiInput>

                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="G/L 계정:" />
                            <Input id="account" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="G/L 계정유형:" />
                            <MultiComboBox width="100%"
                                id="accountType">
                                <core:Item key="P"
                                    text="P(1차 원가 또는 수익)" />
                                <core:Item key="S"
                                    text="S(2차 원가)" />
                                <core:Item key="X"
                                    text="X(대차대조표 계정)" />
                                <core:Item key="N"
                                    text="N(영업 외 비용 또는 수익)" />
                                <core:Item key="C"
                                    text="C(현금 계정)" />
                            </MultiComboBox>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="계정 그룹:" />
                            <Input id="accountGroup"
                                showValueHelp="true" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <HBox justifyContent="End">
                            <Button text="검색"
                                type="Emphasized"
                                press=".onSearch" />
                            <Button text="초기화"
                                type="Transparent"
                                press=".onReset"
                                class="sapUiTinyMarginBegin" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </HBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>
        <f:content class="sapUiSmallMargin">
            <t:Table id="GeneralLedgerTable"
                rows="{GeneralLedgerModel>/}"
                selectionMode="None"
                rowActionCount="1"
                width="auto">
                <t:rowActionTemplate>
                    <t:RowAction>
                        <t:items>
                            <t:RowActionItem type="Navigation"
                                press="onNavToDetail" />
                        </t:items>
                    </t:RowAction>
                </t:rowActionTemplate>

                <t:extension>
                    <OverflowToolbar>
                        <Title id="TableName" />
                        <ToolbarSpacer />
                        <Button text="생성"
                            press=".onCreateGL"
                            type="Transparent" />
                        <Button icon="sap-icon://delete"
                            tooltip="삭제"
                            press=".onDeleteGL"
                            type="Transparent" />
                        <Button icon="sap-icon://sort"
                            tooltip="정렬"
                            press=".onSort"
                            type="Transparent" />
                        <Button icon="sap-icon://excel-attachment"
                            tooltip="Excel Download"
                            press=".onDataExport"
                            type="Transparent" />
                    </OverflowToolbar>
                </t:extension>

                <t:columns>
                    <t:Column hAlign="Center"
                        width="5rem">
                        <Label text="" />
                        <t:template>
                            <CheckBox selected="{GeneralLedgerModel>CHK}"
                                textAlign="Center"
                                select=".onCheckSelect" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="G/L 계정" />
                        <t:template>
                            <Text text="{GeneralLedgerModel>GL_CODE}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="내역" />
                        <t:template>
                            <Text text="{GeneralLedgerModel>GL_NAME}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="계정과목표" />
                        <t:template>
                            <Text text="{GeneralLedgerModel>GL_COA}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="G/L 계정 유형" />
                        <t:template>
                            <Text text="{GeneralLedgerModel>GL_ACCOUNTTYPE}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <Label text="계정 그룹" />
                        <t:template>
                            <Text text="{GeneralLedgerModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
