<mvc:View controllerName="projectGL.controller.GeneralLedgerDetail" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:t="sap.ui.table" xmlns:form="sap.ui.layout.form" xmlns:uxap="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" height="100%">
    <uxap:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" upperCaseAnchorBar="false">
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:heading>
                    <VBox>
                        <HBox>
                            <Button icon="sap-icon://nav-back/" press=".onBack" type="Transparent" visible="{=!${editModel>/edit}}" />
                            <Title text="{GeneralLedgerModel>/GL_CODE}" />
                        </HBox>
                        <HBox>
                            <Text text="{GeneralLedgerModel>/GL_COA}" />
                        </HBox>
                    </VBox>
                </uxap:heading>
                <uxap:actions>
                    <Button type="Emphasized" text="확인" press="onTest" visible="{= ${editModel>/edit}}" />
                    <Button type="Emphasized" text="편집" press="onTest2" visible="{= !${editModel>/edit}}" />
                    <Button type="Default" text="취소" press="onTest3" visible="{= ${editModel>/edit}}" />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <!-- <uxap:headerContent >
                <VBox>
                    <Text text="{GeneralLedgerModel>/GL_COA}" />
                </VBox>
        </uxap:headerContent> -->
        <!-- pinable 만드는것 -->
        <uxap:sections>
            <uxap:ObjectPageSection titleUppercase="false" title="my section">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="일반" mode="Expanded" id="Section1" titleUppercase="false">
                        <uxap:blocks>
                            <uxap:ObjectPageLazyLoader stashed="true" id="Section1stashed">
                                <VBox class="sapUiSmallMargin">
                                    <form:SimpleForm
                                        minWidth="1024"
                                        maxContainerCols="7"
                                        editable="false"
                                        layout="ResponsiveGridLayout"
                                        title="기본 정보"
                                        labelSpanL="10"
                                        labelSpanM="5"
                                        emptySpanL="1"
                                        emptySpanM="1"
                                        columnsL="3"
                                        columnsM="6"
                                        width="auto"
                                        class="sapUxAPObjectPageSubSectionAlignContent"
                                    >
                                        <!-- <Text id="GL_CODE" text="{GeneralLedgerModel>/GL_CODE}" /> -->
                                        <form:content>
                                            <core:Title text="관리" />
                                            <VBox>
                                                <Label text="G/L 계정" labelFor="GL_CODE" />
                                                <Text id="GL_CODE" text="{GeneralLedgerModel>/GL_CODE}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>
                                            <VBox>
                                                <Label text="계정과목표" labelFor="GL_COA" />
                                                <Text text="{GeneralLedgerModel>/GL_COA}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_COA" required="true" value="{GeneralLedgerModel>/GL_COA}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>

                                            <VBox>
                                                <Label text="G/L 계정 유형" labelFor="GL_ACCOUNTTYPE" />
                                                <Text text="{GeneralLedgerModel>/GL_ACCOUNTTYPE}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_ACCOUNTTYPE" required="true" value="{GeneralLedgerModel>/GL_ACCOUNTTYPE}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>

                                            <VBox>
                                                <Label text="계정 그룹" labelFor="GL_ACCOUNTGROUP" />
                                                <Text text="{GeneralLedgerModel>/GL_ACCOUNTGROUP}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_ACCOUNTGROUP" required="true" value="{GeneralLedgerModel>/GL_ACCOUNTGROUP}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>

                                            <VBox>
                                                <Label text="손익 계산서 계정 유형" />
                                                <Text text="{GeneralLedgerModel>/GL_PL_ACCOUNTTYPE}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_PL_ACCOUNTTYPE" value="{GeneralLedgerModel>/GL_PL_ACCOUNTTYPE}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>

                                            <core:Title text="내역(유지보수 언어)(EN)" />
                                            <VBox>
                                                <Label text="내역" labelFor="GL_NAME" />
                                                <Text text="{GeneralLedgerModel>/GL_NAME}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_NAME" required="true" value="{GeneralLedgerModel>/GL_NAME}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>

                                            <VBox>
                                                <Label text="G/L 계정 설명" />
                                                <Text text="{GeneralLedgerModel>/GL_DESCRIPTION}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_DESCRIPTION" value="{GeneralLedgerModel>/GL_DESCRIPTION}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>

                                            <core:Title text="연결데이터" />
                                            <VBox>
                                                <Label text="관계사 번호" />
                                                <Text text="{GeneralLedgerModel>/GL_TRADINGPARTNER}" visible="{=!${editModel>/edit}}" />
                                                <Input id="GL_TRADINGPARTNER" value="{GeneralLedgerModel>/GL_TRADINGPARTNER}" visible="{=${editModel>/edit}}" />
                                                <layoutData>
                                                    <layout:GridData span="XL12 L12 M12 S12" />
                                                </layoutData>
                                            </VBox>
                                        </form:content>
                                    </form:SimpleForm>
                                </VBox>
                            </uxap:ObjectPageLazyLoader>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>

            <uxap:ObjectPageSection titleUppercase="false" title="my section">
                <uxap:subSections>
                    <uxap:ObjectPageSubSection title="회사 코드 데이터" mode="Expanded" id="Section2" titleUppercase="false">
                        <uxap:blocks>
                            <uxap:ObjectPageLazyLoader stashed="true" id="Section2stashed">
                                <VBox class="sapUiSmallMargin">
                                    <form:SimpleForm minWidth="1024" editable="false" layout="ResponsiveGridLayout" title="회사 코드 지정" width="auto" class="sapUxAPObjectPageSubSectionAlignContent">
                                        <form:content>
                                            <t:Table width="100%" id="table" rows="{GeneralLedgerTableModel>/}" selectionMode="MultiToggle" rowActionCount="1" visibleRowCount="7" ariaLabelledBy="title">
                                                <t:extension>
                                                    <OverflowToolbar style="Clear">
                                                        <ToolbarSpacer />
                                                        <ToggleButton type="Emphasized" text="생성" press="onNavIndicatorsToggle" />
                                                    </OverflowToolbar>
                                                </t:extension>

                                                <t:columns>
                                                    <t:Column>
                                                        <Label text="회사 코드" />
                                                        <t:template>
                                                            <Text id="cc_company_code" text="{GeneralLedgerTableModel>CC_COMPANY_CODE}" wrapping="false" />
                                                        </t:template>
                                                    </t:Column>
                                                    <t:Column>
                                                        <Label text="회사 이름" />
                                                        <t:template>
                                                            <Text text="{GeneralLedgerTableModel>CC_COMPANY_NAME}" wrapping="false" />
                                                        </t:template>
                                                    </t:Column>
                                                    <t:Column>
                                                        <Label text="계정 통화" />
                                                        <t:template>
                                                            <Text text="{GeneralLedgerTableModel>CC_CURRENCY}" wrapping="false" />
                                                        </t:template>
                                                    </t:Column>
                                                    <t:Column>
                                                        <Label text="계정과목표" />
                                                        <t:template>
                                                            <Text text="{GeneralLedgerTableModel>CC_COA}" wrapping="false" />
                                                        </t:template>
                                                    </t:Column>
                                                </t:columns>

                                                <t:rowActionTemplate>
                                                    <t:RowAction>
                                                        <t:items>
                                                            <t:RowActionItem type="Navigation" press="onNavToDetail" />
                                                        </t:items>
                                                    </t:RowAction>
                                                </t:rowActionTemplate>
                                            </t:Table>
                                        </form:content>
                                        <form:content />
                                    </form:SimpleForm>
                                </VBox>
                            </uxap:ObjectPageLazyLoader>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
    </uxap:ObjectPageLayout>
</mvc:View>
