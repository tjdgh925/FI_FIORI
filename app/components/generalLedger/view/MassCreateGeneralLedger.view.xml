<mvc:View controllerName="projectGL.controller.MassCreateGeneralLedger" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout">
    <Page showHeader="true" enableScrolling="false" class="sapUiContentPadding">
        <content>
            <t:Table 	rows="{/ProductCollection}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				paste="onPaste">
        
                <t:columns>
                    <!-- 멀티헤더로 헤더/기본정보/회사코드데이터 탭 나누고 -->
                    <t:Column>
                     <t:multiLabels>
                            <Label text="G/L 계정" textAlign="Center" width="100%" />
                            <Label text="Internal Number" textAlign="Center" width="100%" />
                        </t:multiLabels>
                        
                        <t:template>
                            <Text text="{GeneralLedgerModel>GL_CODE}" />
                        </t:template>
                    </t:Column>

                    <t:Column headerSpan="7">
                      <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="계정과목표" textAlign="Center" width="100%" />
                        </t:multiLabels>
                      
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_COA}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                     <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="G/L 계정 유형" textAlign="Center" width="100%" />
                        </t:multiLabels>
                     
                        <t:template>
                            <ObjectStatus text="{
                                path : 'GeneralLedgerModel>GL_ACCOUNTTYPE',
                                formatter : '.formatter.statusText'
                                }" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="계정 그룹" textAlign="Center" width="100%" />
                        </t:multiLabels>
                       
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                      <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="손익계산서 계정 유형" textAlign="Center" width="100%" />
                        </t:multiLabels>
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="내역" textAlign="Center" width="100%" />
                        </t:multiLabels>
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_NAME}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                     <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="G/L 계정 설명" textAlign="Center" width="100%" />
                        </t:multiLabels>
                     
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                    <t:multiLabels>
                            <Label text="일반 데이터" textAlign="Center" width="100%" />
                            <Label text="관계사 번호" textAlign="Center" width="100%" />
                        </t:multiLabels>
                        
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                    <t:multiLabels>
                            <Label text="회사코드 데이터" textAlign="Center" width="100%" />
                            <Label text="회사코드" textAlign="Center" width="100%" />
                        </t:multiLabels>
                        
                        <t:template>
                            <Input value="{GeneralLedgerModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>
                </t:columns>
               
            </t:Table>
        </content>
    </Page>
</mvc:View>
