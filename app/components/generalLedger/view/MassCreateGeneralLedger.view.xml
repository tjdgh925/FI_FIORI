<mvc:View controllerName="projectGL.controller.MassCreateGeneralLedger"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
    <Page showHeader="true"
        enableScrolling="false"
        class="sapUiContentPadding">
        <content>
            <t:Table rows="{MassCreateModel>/}"
                selectionMode="None"
                visibleRowCount="7"
                paste="onPaste">

                <t:extension>
                    <OverflowToolbar>
                        <Title text="GL 대량 생성"/>
                        <ToolbarSpacer />
                        <Button press="onMassCreationNumber"
                            type="Transparent"
                            tooltip="추가"
                            icon="sap-icon://create-form">
                        </Button>
                    </OverflowToolbar>
                </t:extension>

                <t:columns>
                    <!-- 멀티헤더로 헤더/기본정보/회사코드데이터 탭 나누고 -->
                    <t:Column headerSpan="7">
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="계정과목표"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>

                        <t:template>
                            <Input value="{MassCreateModel>GL_COA}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="G/L 계정 유형"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>

                        <t:template>
                            <Input value="{MassCreateModel>GL_ACCOUNTTYPE}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="계정 그룹"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>

                        <t:template>
                            <Input value="{MassCreateModel>GL_ACCOUNTGROUP}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="손익계산서 계정 유형"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>
                        <t:template>
                            <Input value="{MassCreateModel>GL_PL_ACCOUNTTYPE}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="내역"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>
                        <t:template>
                            <Input value="{MassCreateModel>GL_NAME}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="G/L 계정 설명"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>

                        <t:template>
                            <Input value="{MassCreateModel>GL_DESCRIPTION}" />
                        </t:template>
                    </t:Column>

                    <t:Column>
                        <t:multiLabels>
                            <Label text="일반 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="관계사 번호"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>

                        <t:template>
                            <Input value="{MassCreateModel>GL_TRADINGPARTNER}" />
                        </t:template>
                    </t:Column>
                    <t:Column>
                        <t:multiLabels>
                            <Label text="회사코드 데이터"
                                textAlign="Center"
                                width="100%" />
                            <Label text="회사코드"
                                textAlign="Center"
                                width="100%" />
                        </t:multiLabels>

                        <t:template>
                            <Input value="{MassCreateModel>GL_COMPANY_CODE}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center"
                        width="5rem">
                        <Label text="삭제" />
                        <t:template>
                            <Button icon="sap-icon://clear-all"
                                press="onClearMassCreate"
                                tooltip="삭제" />
                        </t:template>
                    </t:Column>
                </t:columns>

            </t:Table>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized"
                    press="onMassCreationApprove"
                    text="생성" />
                <Button type="Default"
                    text="취소"
                    press="onBack" />
            </OverflowToolbar>

        </footer>
    </Page>
</mvc:View>
