<mvc:View controllerName="projectBP.controller.BusinessPartner" xmlns="sap.m" xmlns:f="sap.f" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" height="100%">
    <f:DynamicPage id="BusinessPartnerPage">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Title text="고객마스터" />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>
                        <VBox>
                            <Label text="우편번호 : " />
                            <Input id="bp_postCode" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="비즈니스 파트너 : " />
                            <Input id="bp_name" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="도로 주소 : " />
                            <Input id="bp_address" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="시 : " />
                            <Input id="bp_city" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="국가/지역 : " />
                            <Input id="bp_country" showValueHelp="true" valueHelpRequest="onhandleValueHelp" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="비즈니스 파트너 범주 : " />
                            <Select width="100%" id="bp_category">
                                <core:Item text="전체" />
                                <core:Item text="개인(1)" key="A" />
                                <core:Item text="조직(2)" key="B" />
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="회사코드 : " />
                            <Input id="bp_company_code" />
                            <layoutData>
                                <layout:GridData span="XL2 L2 M6 S12" />
                            </layoutData>
                        </VBox>
                        <HBox justifyContent="End">
                            <Button text="검색" type="Emphasized" press=".onSearch" />
                            <Button text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin" />
                            <layoutData>
                                <layout:GridData span="XL12 L12 M12 S12" />
                            </layoutData>
                        </HBox>
                    </form:content>
                </form:SimpleForm>
            </f:DynamicPageHeader>
        </f:header>

        <f:content class="sapUiSmallMargin">
            <Table id="BusinessPartnerTable" items="{BusinessPartnerModel>/}" width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title id="bp_tableName" />
                            <ToolbarSpacer />
                            <Button text="생성" class="sapUiSmallMargin" press=".onCreate" ariaHasPopup="Menu">
                                <dependents>
                                    <core:Fragment fragmentName="projectBP.view.fragments.SelectBusinessPartnerDialog" type="XML" />
                                </dependents>
                            </Button>
                            <Button icon="sap-icon://delete" tooltip="휴지통" press="onDelete" type="Transparent" />
                            <Button icon="sap-icon://sort" tooltip="정렬" press=".onSort" type="Transparent" />
                            <Button icon="sap-icon://excel-attachment" tooltip="Excel Download" press=".onDataExport" type="Transparent" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="" />
                    </Column>
                    <Column>
                        <Text text="비즈니스 파트너" />
                    </Column>
                    <Column>
                        <Text text="회사 코드" />
                    </Column>
                    <Column>
                        <Text text="도로 주소" />
                    </Column>
                    <Column>
                        <Text text="시" />
                    </Column>
                    <Column>
                        <Text text="우편번호" />
                    </Column>
                    <Column>
                        <Text text="국가/지역" />
                    </Column>
                    <Column>
                        <Text text="BP 범주" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <CheckBox selected="{BusinessPartnerModel>CHK}" textAlign="Center" select="oncheckselect" />
                            <ObjectIdentifier title="{BusinessPartnerModel>BP_CODE}" text="{BusinessPartnerModel>BP_NAME}" />
                            <Text text="{BusinessPartnerModel>BP_COMPANY_CODE}" />
                            <Text text="{BusinessPartnerModel>BP_ADDRESS}" />
                            <Text text="{BusinessPartnerModel>BP_CITY}" />
                            <Text text="{BusinessPartnerModel>BP_POSTCODE}" />
                            <Text text="{BusinessPartnerModel>BP_COUNTRY}" />
                            <ObjectStatus
                                text="{
                            path: 'BusinessPartnerModel>BP_CATEGORY',
                            formatter: '.formatter.statusText'
                            }"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
