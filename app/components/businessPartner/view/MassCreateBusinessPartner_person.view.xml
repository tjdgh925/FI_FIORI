<mvc:View controllerName="projectBP.controller.MassCreateBusinessPartner_person"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout">
    <!-- +버튼을 추가해서 model에 담아야댐(테이블 헤더에 엑셀 추가했던 것 참고하기) -->

    <Page showHeader="true"
        enableScrolling="false"
        class="sapUiContentPadding">
        <content>

            <t:Table rows="{MassCreateModel>/}"
                selectionMode="None"
                visibleRowCount="7"
                paste="onPaste">


                <t:extension>
                    <OverflowToolbar style="Clear">
                        <Title text="개인 생성(대량)"/>
                        <ToolbarSpacer />
                        <Button press="onMassCreationNumber"
                            type="Transparent"
                            tooltip="추가"
                            icon="sap-icon://create-form">
                        </Button>
                    </OverflowToolbar>
                </t:extension>


                <t:columns>
                    <!-- 멀티헤더로 헤더/기본정보/회사코드데이터 탭 나누고 -->
                    <t:Column width="8rem">
                        <Label text="BP 범주"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Text text="{MassCreateModel>BP_CATEGORY}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="8rem">
                        <Label text="개인 칭호"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_NAME_TITLE}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="11rem">
                        <Label text="이름"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_NAME}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="20rem">
                        <Label text="도로 주소"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_ADDRESS}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                        <Label text="번지"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_SPECIFIC_ADDRESS}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="6rem">
                        <Label text="우편번호"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_POSTCODE}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="11rem">
                        <Label text="도시"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_CITY}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="11rem">
                        <Label text="국가/지역"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_COUNTRY}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="11rem">
                        <Label text="지역 "
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_REGION}" />
                        </t:template>
                    </t:Column>

                    <t:Column width="11rem">
                        <Label text="회사 코드"
                            textAlign="Center"
                            width="100%" />
                        <t:template>
                            <Input value="{MassCreateModel>BP_COMPANY_CODE}" />
                        </t:template>
                    </t:Column>

                    <t:Column hAlign="Center"
                        width="5rem">
                        <Label text="삭제" />
                        <t:template>
                            <Button icon="sap-icon://clear-all"
                                press="onClearMassCreate"
                                tooltip="삭제" />
                        </t:template>
                    </t:Column>
                </t:columns>

            </t:Table>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Emphasized"
                    press="onMassCreationApprove"
                    text="생성" />
                <Button type="Default"
                    text="취소"
                    press="onBack" />
            </OverflowToolbar>

        </footer>

    </Page>
</mvc:View>
