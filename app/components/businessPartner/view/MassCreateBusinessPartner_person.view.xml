<mvc:View controllerName="projectBP.controller.MassCreateBusinessPartner_person" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:m="sap.m" height="100%">
    <!-- +버튼을 추가해서 model에 담아야댐(테이블 헤더에 엑셀 추가했던 것 참고하기) -->

    <m:Page showHeader="false" enableScrolling="false" class="sapUiContentPadding">
        <m:content>
            <Table rows="{/MassCollection_person}" selectionMode="MultiToggle" visibleRowCount="7" ariaLabelledBy="title">
                <extension>
                    <m:OverflowToolbar style="Clear">
                        <m:Title id="title" text="개인 생성(대량)" />
                    </m:OverflowToolbar>
                </extension>
                <columns>
                    <!-- 필수값 설정 필요(BP코드) -->
                    <Column width="8rem">
                        <m:Label text="BP 코드" />
                        <template>
                            <m:Input value="{bp_code_person}" />
                        </template>
                    </Column>
                    <Column width="8rem">
                        <m:Label text="BP 범주" />
                        <template>
                            <m:Input value="{bp_category_person}" />
                        </template>
                    </Column>
                    <Column width="8rem">
                        <m:Label text="개인 칭호" />
                        <template>
                            <m:Input value="{bp_name_title_person}" />
                        </template>
                    </Column>
                    <!-- 필수값 설정 필요(이름) -->
                    <Column width="11rem">
                        <m:Label text="이름" />
                        <template>
                            <m:Input value="{Id_bp_name_person}" />
                        </template>
                    </Column>
                    <Column width="20rem">
                        <m:Label text="도로 주소" />
                        <template>
                            <m:Input value="{Id_bp_address_person}" />
                        </template>
                    </Column>
                    <Column width="6rem">
                        <m:Label text="번지" />
                        <template>
                            <m:Input value="{Id_bp_specific_address_person}" />
                        </template>
                    </Column>
                    <Column width="6rem">
                        <m:Label text="우편번호" />
                        <template>
                            <m:Input value="{Id_bp_postCode_person}" />
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label text="도시" />
                        <template>
                            <m:Input value="{Id_bp_city_person}" />
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label text="국가/지역" />
                        <template>
                            <m:Input value="{Id_bp_country_person}" />
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label text="지역" />
                        <template>
                            <m:Input value="{Id_bp_region_person}" />
                        </template>
                    </Column>
                    <!-- 필수값 설정 필요(회사코드) -->
                    <Column width="11rem">
                        <m:Label text="회사코드" />
                        <template>
                            <m:Input value="{Id_bp_company_code_person}" />
                        </template>
                    </Column>
                </columns>
            </Table>
        </m:content>
    </m:Page>
</mvc:View>
